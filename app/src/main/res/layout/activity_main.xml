<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mohamed.yourhero.MainActivity"
    android:background="#BF360C">

    <TextView
        android:id="@+id/apptitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/appTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp"
        android:textColor="#FFEB3B"
        android:textSize="40sp"/>

    <Button
        android:id="@+id/buttonPlay"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/guideline"
        app:layout_constraintStart_toStartOf="@id/apptitle"
        app:layout_constraintEnd_toEndOf="@id/apptitle"
        android:text="@string/Play"
        android:textColor="#BF360C"
        android:background="#FFEB3B"
        android:textSize="20sp"
        />

    <Button
        android:id="@+id/buttonHistoric"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/buttonPlay"
        app:layout_constraintStart_toStartOf="@id/apptitle"
        app:layout_constraintEnd_toEndOf="@id/apptitle"
        android:text="@string/Historic"
        android:textColor="#BF360C"
        android:background="#FFEB3B"
        android:textSize="20sp"
        android:layout_marginTop="15dp"
        />

    <Button
        android:id="@+id/buttonExit"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/buttonHistoric"
        app:layout_constraintStart_toStartOf="@id/apptitle"
        app:layout_constraintEnd_toEndOf="@id/apptitle"
        android:text="@string/exit"
        android:textColor="#BF360C"
        android:background="#FFEB3B"
        android:textSize="20sp"
        android:layout_marginTop="15dp"
        />



    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.45"
        />

</android.support.constraint.ConstraintLayout>
